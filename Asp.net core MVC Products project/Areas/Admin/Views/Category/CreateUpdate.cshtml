@model MyApp.Models.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="CreateUpdate">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Category==null ||Model.Category.Id==0)? "Create" :"Update")Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <br />
        @if(Model.Category == null || Model.Category.Id == 0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
        
       
    </div>
    <br />
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Category">Back to List</a>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}


